    "@google/genai": "^1.31.0",
    "@supabase/supabase-js": "^2.86.2",
    "@tailwindcss/typography": "^0.5.19",
    "@types/canvas-confetti": "^1.9.0",
    "buffer": "^6.0.3",
    "canvas-confetti": "^1.9.4",
    "clsx": "^2.1.1",
    "cordova-plugin-advanced-http": "^3.3.1",
