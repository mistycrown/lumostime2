{
  "name": "lumostime",
  "private": true,
  "version": "1.0.7",
  "description": "LumosTime - A personal time management application",
  "license": "GPL-3.0",
  "author": "lumosmomo",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
